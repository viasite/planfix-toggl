<style>
    body{
        font-size: 16px;
        font-family: Arial;
    }
    .page__header{
        font-size: 1.2rem;
        margin-bottom: 30px;
    }
    .entry{
        margin-bottom: 15px;
    }
    .entry__name{
        display: block;
    }
    .entry__link{
        color: #4573B1;
        text-decoration: none;
        font-size: 0.9rem;
        margin-left: 1rem;
    }
</style>
<html>
    <head>
        <title>{{ title }}</title>
    </head>
    <body>
        <div class="page__header">{{ header }}</div>
        {% for entry in entries %}
            <div class="entry">
                <span class="entry__name">{{ entry.description }}</span>
                <span class="entry__project" style="color:{{ entry.project_hex_color }}">{{ entry.project }}</span>
                <a class="entry__link" href="https://{{ planfix_account }}.planfix.ru/task/{{ entry.planfix_task_id }}" target="_blank">#{{ entry.planfix_task_id }}</a>
            </div>
        {% endfor %}
    </body>
</html>